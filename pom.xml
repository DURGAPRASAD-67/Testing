<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>in.durga</groupId>
    <artifactId>01-my-app</artifactId>
    <packaging>war</packaging>
    <version>3.0-RELEASE</version>
    <name>01-my-app</name>
    <url>http://maven.apache.org</url>

    <properties>
        <!-- Set the Java version to 17 for your project -->
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding> <!-- Set encoding to UTF-8 -->
    </properties>

    <dependencies>
        <!-- JUnit dependency -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
        </dependency>

        <!-- Selenium WebDriver (Version 4.10.0 for Java latest compatibility) -->
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-java</artifactId>
            <version>4.10.0</version> <!-- The latest version as of now -->
        </dependency>

        <!-- WebDriverManager for automatic WebDriver setup -->
        <dependency>
            <groupId>io.github.bonigarcia</groupId>
            <artifactId>webdrivermanager</artifactId>
            <version>5.3.0</version> <!-- Latest version -->
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Maven Compiler Plugin for setting the Java version -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.10.1</version> <!-- Ensure compatibility with Java 17 -->
                <configuration>
                    <source>17</source> <!-- Set source version to Java 17 -->
                    <target>17</target> <!-- Set target version to Java 17 -->
                    <encoding>UTF-8</encoding> <!-- Ensure consistent UTF-8 encoding -->
                </configuration>
            </plugin>

            <!-- Maven WAR Plugin for packaging the application as a WAR file -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.3.1</version>
            </plugin>
        </plugins>
    </build>
</project>
